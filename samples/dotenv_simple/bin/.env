# Basic configuration values
mode=dev
dbuser=my_user
dbpassword=XYZdteti!$
dbhostname=127.0.0.1
dbport=5432
api_version=1.2.3
base_memory=1024

# Simple mathematical expressions
simple_sum=$[2 + 3]
simple_multiply=$[10 * 5]
division_result=$[100 / 4]

# Expressions using variables
max_connections=$[100 + 50]
timeout_seconds=$[30 * 60]
buffer_size=$[base_memory * base_memory]

# String functions
db_host_str=$[ToString(dbhostname)]
port_str=$[ToString(dbport)]

# Mathematical functions
sqrt_result=$[sqrt(16)]
log_result=$[log(100)]

# Boolean expressions (using numeric comparisons)
high_memory=$[base_memory > 512]
low_connections=$[max_connections < 200]

# Complex calculations
memory_per_connection=$[buffer_size / max_connections]
total_timeout=$[timeout_seconds + 300]

# Optional user preferences path (with default fallback)
user_preferences_path=.\myfolder