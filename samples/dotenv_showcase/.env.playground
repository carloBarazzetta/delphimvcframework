# Test file for expression evaluation in .env with $[expr] syntax
PORT=8080
DATABASE_PORT=$[PORT + 1000]
DEBUG_LEVEL=$[IF PORT > 8000 THEN 3 ELSE 1]

# Mathematical expressions
TIMEOUT_SECONDS=30
TIMEOUT_MS=$[TIMEOUT_SECONDS * 1000]

# String operations
APP_NAME=MyApp
VERSION=1.5
FULL_NAME=$[APP_NAME + "_v" + ToString(VERSION)]

# Conditional expressions
ENVIRONMENT=production
LOG_LEVEL=$[IF ENVIRONMENT = "development" THEN "DEBUG" ELSE "INFO"]

# Complex calculations
BASE_VALUE=100
MULTIPLIER=2.5
CALCULATED_VALUE=$[BASE_VALUE * MULTIPLIER + sqrt(16)]

# Mix with traditional ${} placeholders
HOST=localhost
DB_URL=${HOST}:$[PORT + 1000]