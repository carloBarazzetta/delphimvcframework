# Comprehensive test for expression evaluation with $[expr] syntax
# Basic math
PORT=8080
DATABASE_PORT=$[PORT + 1000]

# String concatenation
APP_NAME=MyApp
VERSION=1.5
FULL_NAME=$[APP_NAME + "_v" + ToString(VERSION)]

# Conditional logic
DEBUG_LEVEL=$[IF PORT > 8000 THEN 3 ELSE 1]
ENVIRONMENT=production
LOG_LEVEL=$[IF ENVIRONMENT = "development" THEN "DEBUG" ELSE "INFO"]

# Mathematical functions
BASE_VALUE=100
CALCULATED=$[BASE_VALUE * 2.5 + sqrt(16)]
LOG_VALUE=$[log(1000)]

# Boolean expressions
IS_PRODUCTION=$[ENVIRONMENT = "production"]

# Complex expressions with mixed syntax
TIMEOUT_SECONDS=30
TIMEOUT_MS=$[TIMEOUT_SECONDS * 1000]
MAX_CONNECTIONS=$[IF IS_PRODUCTION THEN 1000 ELSE 100]

# Mixed ${} and $[] usage
HOST=localhost
API_PORT=$[PORT + 3000]
FULL_API_URL=${HOST}:$[API_PORT]/api/v$[VERSION]